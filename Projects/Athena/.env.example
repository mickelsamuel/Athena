# Athena Trading Platform Configuration
# Copy this file to .env and adjust values as needed

# Environment
ENV=development
LOG_LEVEL=INFO

# Data settings
DATA_DIR=./data_cache
CACHE_ENABLED=true

# Yahoo Finance settings
YF_MAX_RETRIES=3
YF_RETRY_DELAY=1.0

# Backtest settings
DEFAULT_INITIAL_CAPITAL=100000
DEFAULT_COMMISSION=0.001

# Risk management
MAX_POSITION_SIZE=0.2
KELLY_FRACTION=0.25
MAX_GROSS_EXPOSURE=1.0
PER_TRADE_RISK_CAP=0.02
DAILY_LOSS_LIMIT=0.05

# Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=true

# Paper trading (Binance testnet)
# Get your keys from: https://testnet.binance.vision/
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_SECRET_KEY=your_testnet_secret_key_here
BINANCE_TESTNET_URL=https://testnet.binance.vision

# Database (optional, for trade history)
DATABASE_URL=sqlite:///./athena.db

# Optimization settings
OPTUNA_N_TRIALS=100
OPTUNA_TIMEOUT_SECONDS=3600

# Walk-forward validation
WFV_TRAIN_DAYS=365
WFV_TEST_DAYS=90